<div class="text-center">
  <h1>Restaurants index</h1>
  <p>All restaurants listed here</p>
</div>
<div class="container">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <ol>

        <% @restaurants.each do |restaurant| %>
        <li><%= link_to "#{restaurant.name} - #{restaurant.address}", restaurant_path(restaurant) %></li>
        <% end %>

    </ol>
  </div>
</div>
